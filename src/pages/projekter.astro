---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import TagFilter from '../components/TagFilter.astro';
import { projects } from '../data/projects';

// Extract unique tags
const allTags = [...new Set(projects.flatMap(p => p.tags))].sort();
---

<Layout title="Projekter - Rasmus">
  <div class="max-w-full">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl mb-6">
      Projekter
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mb-10">
      Et udvalg af mine seneste projekter inden for webudvikling, automatisering og dataanalyse.
    </p>

    <TagFilter tags={allTags} />

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 mt-8">
      {projects.map(project => (
        <ProjectCard project={project} />
      ))}
    </div>
  </div>
</Layout>
