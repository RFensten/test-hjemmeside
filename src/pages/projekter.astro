---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import TagFilter from '../components/TagFilter.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');

// Extract unique tags
const allTags = [...new Set(projects.flatMap(p => p.data.tags))].sort();
---

<Layout title="Projekter - Rasmus">
  <div class="bg-[#F5F5F0] dark:bg-[#1a1a18] min-h-screen py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-serif font-bold tracking-tight text-[#2C2C2C] dark:text-[#EAEAEA] sm:text-5xl mb-6">
        Projekter
      </h1>
      <p class="text-lg text-[#5C5C5C] dark:text-[#B0B0B0] max-w-2xl mb-12">
        Et udvalg af mine seneste projekter inden for webudvikling, automatisering og dataanalyse.
      </p>

      <TagFilter tags={allTags} />

      <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3 mt-12">
        {projects.map(project => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </div>
</Layout>
