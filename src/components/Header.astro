---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"

const navLinks = [
  { href: '/', label: 'Forside' },
  { href: '/om', label: 'Om mig' },
  { href: '/projekter', label: 'Projekter' },
  { href: '/nyhedsbrev', label: 'Nyhedsbrev' },
  { href: '/test', label: 'Test' },
];
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 dark:bg-gray-950/80 border-b border-gray-100 dark:border-gray-800 transition-colors duration-300">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo / Name -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <span class="text-xl font-serif font-bold text-[#2C2C2C] dark:text-[#EAEAEA] group-hover:text-[#4A5D4F] dark:group-hover:text-[#A4AC86] transition-colors">
            Rasmus<span class="text-[#4A5D4F] dark:text-[#A4AC86]">.</span>
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden sm:flex space-x-8">
        {navLinks.map(({ href, label }) => {
          // Logic to determine active state. 
          // Special case for home '/' vs other paths
          const isActive = href === '/' 
            ? pathname === '/' 
            : pathname.startsWith(href);

          return (
            <a 
              href={href}
              class:list={[
                "inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 transition-colors duration-200 ease-in-out",
                isActive 
                  ? "border-[#4A5D4F] text-[#2C2C2C] dark:text-white dark:border-[#A4AC86]" 
                  : "border-transparent text-gray-500 hover:text-[#4A5D4F] hover:border-[#4A5D4F] dark:text-gray-400 dark:hover:text-[#A4AC86] dark:hover:border-[#A4AC86]"
              ]}
            >
              {label}
            </a>
          );
        })}
      </nav>

      <!-- Mobile Menu Button (Simple JS toggle implementation or checkbox hack) -->
      <div class="sm:hidden flex items-center">
        <button id="mobile-menu-btn" type="button" class="text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 p-2 rounded-md">
          <span class="sr-only">Ã…bn menu</span>
          <!-- Icon menu -->
          <svg class="h-6 w-6 block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      
<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
